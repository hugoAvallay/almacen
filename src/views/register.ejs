<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', { title : 'REGISTRO' }) %>

    <body>

        <%- include('partials/header') %>

            <section class="form-register">
                <figure class="registro_logo">
                    <a href="/"><img src="/images/logoAlmacen.png" alt=""></a>
                </figure>
                <h4>CREÁ TU CUENTA</h4>
                <form method="POST">
                    <div>
                        <label class="form-label" for="name">Nombre</label>
                        <input class="form-control  <%= locals.errors && (errors.name && 'is-invalid') %>" type="text"
                            id="name" name="name" value="<%= locals.old && (old.name && old.name) %>" />
                        <small class="ms-1 text-danger">
                            <%= locals.errors && (errors.name && errors.name.msg) %>
                        </small>
                    </div>
                    <div>
                        <label class="form-label" for="surname">Apellido</label>
                        <input class="form-control <%= locals.errors && (errors.surname && 'is-invalid') %>"
                            type="text" id="surname" name="surname"
                            value="<%= locals.old && (old.surname&& old.surname) %>" />
                        <small class="ms-1 text-danger">
                            <%= locals.errors && (errors.surname && errors.surname.msg) %>
                        </small>

                    </div>

                    <div>
                        <label class="form-label" for="email">Email</label>
                        <input class="form-control <%= locals.errors && (errors.email && 'is-invalid') %>"
                            type="email" id="email" name="email"
                            value="<%= locals.old && (old.email && old.email) %>" />
                        <small class="ms-1 text-danger">
                            <%= locals.errors && (errors.email && errors.email.msg) %>
                        </small>
                    </div>

                    <div class="d-flex justify-content-between gap-2">
                        <div class="col-6 col-md-6">
                            <label class="form-label" for="password">Contraseña</label>
                            <input class="form-control <%= locals.errors && (errors.password && 'is-invalid') %>"
                                type="password" id="password" name="password" />
                            <small class="ms-1 text-danger">
                                <%= locals.errors && (errors.password && errors.password.msg) %>
                            </small>

                        </div>
                        <div class="col-6 col-md-6">
                            <label class="form-label" for="password2">Confirma contraseña</label>
                            <input class="form-control <%= locals.errors && (errors.password2 && 'is-invalid') %>"
                                type="password" id="password2" name="password2" />
                            <small class="ms-1 text-danger">
                                <%= locals.errors && (errors.password2 && errors.password2.msg) %>
                            </small>
                        </div>
                    </div>
                    <p>Estoy de acuerdo con <a href="/info/condiciones">Terminos y Condiciones</a></p>
                    <input class="botons" type="submit" value="CREAR">
                    <div class="googlefacebook">
                        <h3>O inicia sesion con</h3>
                        <i class="fa-brands fa-google"></i>
                        <i class="fa-brands fa-facebook"></i>
                    </div>
                    <p><a href="login">¿Ya tengo Cuenta?</a></p>


            </section>
            </form>
            <%- include('partials/footer') %>
    </body>

</html>